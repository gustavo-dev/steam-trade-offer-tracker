{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "keyofStringsOnly": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"]
}
